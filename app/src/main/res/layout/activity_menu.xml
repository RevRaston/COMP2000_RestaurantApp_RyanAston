<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <!-- MAIN SCREEN -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/purple_500"
            android:title="Menu"
            android:titleTextColor="@android:color/white"
            app:navigationIcon="@drawable/ic_menu" />

        <!-- Tabs -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabIndicatorColor="@color/purple_500"
            app:tabTextColor="@android:color/black"
            app:tabSelectedTextColor="@color/purple_500"
            android:background="@android:color/white" />

        <!-- Scrollable content -->
        <ScrollView
            android:id="@+id/scrollMenu"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/menuContainer"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Invisible anchors for tab scroll targets -->
                <View
                    android:id="@+id/sectionStarters"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:visibility="invisible" />

                <View
                    android:id="@+id/sectionDeals"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:visibility="invisible" />

                <View
                    android:id="@+id/sectionSpecials"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:visibility="invisible" />

                <View
                    android:id="@+id/sectionMains"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:visibility="invisible" />

                <View
                    android:id="@+id/sectionDesserts"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:visibility="invisible" />

                <View
                    android:id="@+id/sectionDrinks"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:visibility="invisible" />

                <!-- Dynamic items go here -->
                <!-- Java code adds category headers + item cards here -->
            </LinearLayout>
        </ScrollView>

        <!-- Book a Table button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBookNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:text="Book a Table"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white"
            app:cornerRadius="24dp" />

    </LinearLayout>

    <!-- Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
